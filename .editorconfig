# Top-most EditorConfig file
root = true

[*]
end_of_line = crlf
indent_style = tab
tab_width = 4
trim_trailing_whitespace = true
insert_final_newline = false

[*.{h,c,hpp,cpp}]
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true

[*.{css,sass,scss}]
indent_style = space
indent_size = 2

[*.json]
indent_style = space
indent_size = 2
insert_final_newline = true

[*.{cmd,ps1,psm1,sh}]
indent_style = space
indent_size = 4

[*.sh]
end_of_line = lf

[*.{xml,config,csproj,vcxproj,filters,props,targets,nuspec}]
indent_style = space
indent_size = 2

[*.sln]
insert_final_newline = true

[*.{txt,md}]
indent_style = space
indent_size = unset

[**/Resources/**]
charset = unset
end_of_line = unset
indent_style = unset
indent_size = unset
trim_trailing_whitespace = unset
insert_final_newline = unset